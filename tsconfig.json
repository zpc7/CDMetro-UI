{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strict": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise"
    ],
    "types": []
  },
  "exclude": [
    "node_modules"
  ]
}